# Agent Memz Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================
# API Keys for Embeddings & AI
# ============================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================
# PostgreSQL Configuration
# ============================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=agentmemz
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=agent_memory

# Full database URL (alternative)
DATABASE_URL=postgresql://agentmemz:your_secure_password_here@localhost:5432/agent_memory

# ============================================================
# Redis Configuration
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================================
# MinIO Configuration
# ============================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_SECURE=false

# ============================================================
# Application Settings
# ============================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=info

# ============================================================
# Vector Search Settings
# ============================================================
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.7

# ============================================================
# Voice Agent Settings
# ============================================================
VOICE_SAMPLE_RATE=16000
AUDIO_FORMAT=wav
MAX_AUDIO_SIZE_MB=10
